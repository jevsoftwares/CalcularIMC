<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextNumberDecimalAltura"
            app:layout_constraintStart_toEndOf="@+id/textViewPeso" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="115dp" android:layout_marginRight="115dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimalPeso" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Altura: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewAltura"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="34sp" app:layout_constraintTop_toBottomOf="@+id/textViewPeso"
            android:layout_marginTop="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextNumberDecimalPeso"
            app:layout_constraintStart_toEndOf="@+id/textViewPeso" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="115dp" android:layout_marginRight="115dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
            android:layout_marginTop="96dp"/>
    <TextView
            android:text="Peso: "
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewPeso"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="176dp" android:textSize="34sp"/>
    <TextView
            android:text="Calculo de IMC"
            android:layout_width="0dp"
            android:layout_height="64dp" android:id="@+id/textViewTitulo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="48sp" android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:gravity="center"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewResult"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimalAltura" android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:gravity="center" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>